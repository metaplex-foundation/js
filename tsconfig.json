{
  "include": ["packages/*/src"],
  "exclude": ["node_modules", "packages/*/node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": true,
    "noEmit": false,
    "noEmitOnError": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["packages/js/src/*"]
    },

    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,

    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "strict": true,
    "isolatedModules": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "stripInternal": true
  },
  "typedocOptions": {
    "entryPoints": ".",
    "entryPointStrategy": "packages",
    "plugin": ["./infra/typedoc-plugin.js"],
    "out": "docs",
    "readme": "README.md",
    "excludeNotDocumented": false,
    "sort": ["static-first", "required-first", "source-order"],
    "categoryOrder": [
      "Constructors",
      "Types",
      "Inputs",
      "Outputs",
      "Contexts",
      "*"
    ]
  }
}
