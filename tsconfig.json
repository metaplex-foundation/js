{
  "include": ["packages/*/src"],
  "exclude": ["node_modules", "packages/*/node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": true,
    "noEmit": false,
    "noEmitOnError": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["packages/js/src/*"]
    },

    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,

    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "strict": true,
    "isolatedModules": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve"
  },
  "typedocOptions": {
    "entryPoints": "packages/*/src/index.ts",
    "out": "docs",
    "readme": "README.md"
  }
}
